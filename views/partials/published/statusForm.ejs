<div id="new-published-post-modal-status" class="tab-pane fade in active">
  <form id="newPostForm" onsubmit="formSubmission(this, event);" method="POST" enctype="multipart/form-data" action="/page/<%= page_details.id %>/post/<%= posts_type %>">
    <textarea name="message" style="width:100%; min-height:140px; padding-right:10px;" placeholder="Say something.." required 
    oninvalid="this.setCustomValidity('This status update appears to be blank. Please write something.')" onkeyup="this.setCustomValidity('')" type="text" ></textarea >
    <input type="hidden" name="type" value="status"></input>
    <% if(active_link.unpublished){ %>
        <input type="checkbox" name="scheduleLater" class="scheduleLater" id="scheduleLater">Schedule for Later: 
        <div class="schedule-time" >
          <input type="text" data-field="datetime" name="datetime" placeholder="Select Date" readonly>
          <div id="dtBox"></div>
        </div>
    <% }%> 
    <% include formSubmit %>
  </form>
</div>